<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/panding_35"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/ivLoading"
            android:layout_width="@dimen/panding_50"
            android:layout_height="@dimen/panding_50"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_loading_outer"/>

        <ImageView
            android:layout_width="@dimen/panding_35"
            android:layout_height="@dimen/panding_35"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_loading_ic"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llNoWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/panding_35"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/panding_55"
            android:layout_height="@dimen/panding_55"
            android:src="@mipmap/ico_no_wifi"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color999"
            android:textSize="@dimen/textsize_11"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/panding_2"
            android:text="请检查网络"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color999"
            android:textSize="@dimen/textsize_11"
            android:gravity="center_horizontal"
            android:text="点击刷新"/>
    </LinearLayout>

</RelativeLayout>
