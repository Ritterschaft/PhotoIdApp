<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="@dimen/panding_50"
            android:layout_height="@dimen/panding_50"
            android:src="@mipmap/icon_search_empty"
            android:layout_marginBottom="@dimen/panding_7"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvEmptyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color777"
            android:letterSpacing="0.05"
            android:textSize="@dimen/textsize_12"/>
    </LinearLayout>
</RelativeLayout>
